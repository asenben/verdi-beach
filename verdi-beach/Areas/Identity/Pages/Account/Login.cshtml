@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div class="login-section">
    <div class="login-form-container">
        <div class="login-logo"></div>
        <h2 class="login-title">Вход</h2>
        <form method="post" class="login-form">
            <div class="login-form-group">
                <label for="email" class="login-label" asp-for="Input.Email">Email</label>
                <input class="login-input" asp-for="Input.Email" autocomplete="username" placeholder="name@example.com" />
                <span class="login-validation" asp-validation-for="Input.Email"></span>
            </div>
            <div class="login-form-group">
                <label for="password" class="login-label" asp-for="Input.Password">Password</label>
                <input class="login-input" asp-for="Input.Password" autocomplete="current-password" placeholder="password" />
                <span class="login-validation" asp-validation-for="Input.Password"></span>
            </div>
            <div class="login-form-group login-checkbox-group">
                <label class="login-checkbox-label">
                    <input class="login-checkbox" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
            <button type="submit" class="login-btn">Log in</button>
            <div class="login-links">
                <a asp-page="./ForgotPassword">Forgot your password?</a>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                <a asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
